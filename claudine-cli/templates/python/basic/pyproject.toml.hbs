[project]
name = "{{kebab projectName}}"
version = "{{version}}"
{{#if description}}description = "{{description}}"{{/if}}
{{#if author}}authors = [
    { name = "{{author}}"{{#if email}}, email = "{{email}}"{{/if}} }
]{{/if}}
{{#if license}}license = { text = "{{license}}" }{{/if}}
readme = "README.md"
requires-python = ">={{pythonVersion}}"

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "ruff>=0.1.0",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.ruff]
line-length = 100
target-version = "py{{replace pythonVersion "." ""}}"

[tool.ruff.lint]
select = ["E", "F", "I"]
ignore = []
